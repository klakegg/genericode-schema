{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$ref": "#/definitions/document",
    "definitions": {
        "document": {
            "title": "Genericode document",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "identification",
                "columns",
                "keys"
            ],
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "annotation": {
                    "type": "object"
                },
                "identification": {
                    "$ref": "#/definitions/identification"
                },
                "columns": {
                    "$ref": "#/definitions/columns"
                },
                "keys": {
                    "$ref": "#/definitions/keys"
                },
                "codes": {
                    "$ref": "#/definitions/codes"
                }
            }
        },
        "identification": {
            "description": "Identification and location information (metadata).",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "short_name",
                "version",
                "canonical_uri",
                "canonical_version_uri"
            ],
            "properties": {
                "short_name": {
                    "description": "Short name (without white space).­",
                    "type": "string"
                },
                "long_name": {
                    "description": "Human-readable name.",
                    "type": "string"
                },
                "version": {
                    "description": "Version identifier.",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "number"
                        }
                    ]
                },
                "canonical_uri": {
                    "description": "Canonical URI which uniquely identifies all versions (collective­ly).",
                    "type": "string"
                },
                "canonical_version_uri": {
                    "description": "Canonical URI which uniquely identifies this version.",
                    "type": "string"
                },
                "location_uri": {
                    "description": "Suggested retrieval location for this version, in genericode for­mat.",
                    "$ref": "#/definitions/stringlist"
                },
                "alternative_format_location_uri": {
                    "description": "Suggested retrieval location for this version, in a non-genericode format.",
                    "$ref": "#/definitions/stringlist"
                },
                "agency": {
                    "description": "Agency that is responsible for publication and/or maintenance of the information.",
                    "$ref": "#/definitions/agency"
                }
            }
        },
        "agency": {
            "description": "Details of an agency which produces code lists or related artifacts.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "short_name"
            ],
            "properties": {
                "short_name": {
                    "description": "Short name (without whitespace) for the agency.",
                    "type": "string"
                },
                "long_name": {
                    "description": "Human-readable name for the agency.",
                    "type": "string"
                },
                "identifier": {
                    "description": "Identifier for the agency.",
                    "type": "string"
                }
            }
        },
        "columns": {
            "type": "object",
            "patternProperties": {
                "^.+$": {
                    "$ref": "#/definitions/column"
                }
            }
        },
        "column": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "short_name": {
                    "type": "string"
                },
                "long_name": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean",
                    "default": false
                },
                "canonical_uri": {
                    "type": "string"
                },
                "data_type": {
                    "type": "string",
                    "enum": [
                        "normalizedString",
                        "string",
                        "token",
                        "boolean",
                        "decimal"
                    ]
                },
                "data_language": {
                    "type": "string",
                    "pattern": "^[a-z]{2}$"
                }
            }
        },
        "keys": {
            "type": "object",
            "patternProperties": {
                "^.+$": {
                    "$ref": "#/definitions/key"
                }
            }
        },
        "key": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "column_ref"
            ],
            "properties": {
                "short_name": {
                    "type": "string"
                },
                "long_name": {
                    "type": "string"
                },
                "column_ref": {
                    "$ref": "#/definitions/stringlist"
                }
            }
        },
        "codes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/row"
            }
        },
        "row": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "^.+$": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "integer"
                        },
                        {
                            "type": "number"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        },
        "stringlist": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        }
    }
}