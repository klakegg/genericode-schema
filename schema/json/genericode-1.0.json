{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$ref": "#/definitions/document",
    "definitions": {
        "document": {
            "title": "Genericode document",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "Identification",
                "Columns",
                "Keys"
            ],
            "properties": {
                "$schema": {
                    "type": "string"
                },
                "Annotation": {
                    "type": "object"
                },
                "Identification": {
                    "$ref": "#/definitions/identification"
                },
                "Columns": {
                    "$ref": "#/definitions/columns"
                },
                "Keys": {
                    "$ref": "#/definitions/keys"
                },
                "Codes": {
                    "$ref": "#/definitions/codes"
                }
            }
        },
        "identification": {
            "description": "Identification and location information (metadata).",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "ShortName",
                "Version",
                "CanonicalUri",
                "CanonicalVersionUri"
            ],
            "properties": {
                "ShortName": {
                    "description": "Short name (without white space).­",
                    "$ref": "#/definitions/field_short_name"
                },
                "LongName": {
                    "description": "Human-readable name.",
                    "$ref": "#/definitions/type_translateable_string"
                },
                "Version": {
                    "description": "Version identifier.",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "number"
                        }
                    ]
                },
                "CanonicalUri": {
                    "description": "Canonical URI which uniquely identifies all versions (collective­ly).",
                    "type": "string"
                },
                "CanonicalVersionUri": {
                    "description": "Canonical URI which uniquely identifies this version.",
                    "type": "string"
                },
                "LocationUri": {
                    "description": "Suggested retrieval location for this version, in genericode for­mat.",
                    "$ref": "#/definitions/type_stringlist"
                },
                "AlternativeFormatLocationUri": {
                    "description": "Suggested retrieval location for this version, in a non-genericode format.",
                    "$ref": "#/definitions/type_stringlist"
                },
                "Agency": {
                    "description": "Agency that is responsible for publication and/or maintenance of the information.",
                    "$ref": "#/definitions/agency"
                }
            }
        },
        "agency": {
            "description": "Details of an agency which produces code lists or related artifacts.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "ShortName"
            ],
            "properties": {
                "ShortName": {
                    "description": "Short name (without whitespace) for the agency.",
                    "$ref": "#/definitions/field_short_name"
                },
                "LongName": {
                    "description": "Human-readable name for the agency.",
                    "$ref": "#/definitions/type_translateable_string"
                },
                "Identifier": {
                    "description": "Identifier for the agency.",
                    "type": "string"
                }
            }
        },
        "columns": {
            "description": "List of columns.",
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^\\S+$": {
                    "$ref": "#/definitions/column"
                }
            }
        },
        "column": {
            "description": "Column definition.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "ShortName"
            ],
            "properties": {
                "ShortName": {
                    "$ref": "#/definitions/field_short_name"
                },
                "LongName": {
                    "$ref": "#/definitions/type_translateable_string"
                },
                "Required": {
                    "type": "boolean",
                    "default": false
                },
                "CanonicalUri": {
                    "type": "string"
                },
                "DataType": {
                    "type": "string",
                    "enum": [
                        "normalizedString",
                        "string",
                        "token",
                        "boolean",
                        "decimal"
                    ]
                },
                "DataLanguage": {
                    "type": "string",
                    "pattern": "^[a-z]{2}$"
                }
            }
        },
        "keys": {
            "description": "List of keys.",
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^\\S+$": {
                    "$ref": "#/definitions/key"
                }
            }
        },
        "key": {
            "description": "Key definition.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "ShortName",
                "ColumnRef"
            ],
            "properties": {
                "ShortName": {
                    "$ref": "#/definitions/field_short_name"
                },
                "LongName": {
                    "type": "string"
                },
                "ColumnRef": {
                    "oneOf": [
                        {
                            "type": "string",
                            "pattern": "^\\S+$"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^\\S+$"
                            }
                        }
                    ]
                }
            }
        },
        "codes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/row"
            }
        },
        "row": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": false,
            "patternProperties": {
                "^\\S+$": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "number"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        },
        "field_short_name": {
            "type": "string",
            "pattern": "^\\S+$"
        },
        "type_stringlist": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "type_translateable_string": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "patternProperties": {
                        "^.+$": {
                            "type": "string"
                        }
                    }
                }
            ]
        }
    }
}